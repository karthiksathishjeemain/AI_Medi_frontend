{
    "rewrites": [
      { "source": "/(.*)", "destination": "/index.html" }
    ],
    "routes": [
      { 
        "src": "/assets/(.*)", 
        "headers": { "cache-control": "public, max-age=31536000, immutable" },
        "dest": "/assets/$1" 
      },
      { 
        "src": "/(.*)\\.js", 
        "headers": { "cache-control": "public, max-age=31536000" },
        "dest": "/$1.js" 
      },
      { 
        "src": "/(.*)\\.css", 
        "headers": { "cache-control": "public, max-age=31536000" },
        "dest": "/$1.css" 
      },
      {
        "src": "/favicon.ico",
        "dest": "/favicon.ico"
      },
      { 
        "handle": "filesystem" 
      },
      {
        "src": "/(.*)",
        "dest": "/index.html"
      }
    ]
  }